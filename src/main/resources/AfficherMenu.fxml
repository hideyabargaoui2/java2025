<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AfficherMenu"
            prefHeight="450.0" prefWidth="600.0">
    <children>
        <TableView fx:id="tableMenus" layoutX="20.0" layoutY="20.0" prefHeight="360.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="colRestaurant" text="Nom Restaurant" prefWidth="140.0" />
                <TableColumn fx:id="colPlat" text="Nom Plat" prefWidth="140.0" />
                <TableColumn fx:id="colPrix" text="Prix" prefWidth="100.0" />
                <TableColumn fx:id="colDescription" text="Description" prefWidth="180.0" />
            </columns>
        </TableView>
        <Button fx:id="modifierMenuButton" text="Modifier" layoutX="200" layoutY="390" onAction="#modifierMenu"/>


        <Button fx:id="btnDeleteMenu" text="Supprimer un menu"
                layoutX="350.0" layoutY="390.0"
                onAction="#deleteMenu" />
    </children>
</AnchorPane>
