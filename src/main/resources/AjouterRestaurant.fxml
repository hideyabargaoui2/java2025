<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterRestaurant">
    <children>
        <Label layoutX="49.0" layoutY="40.0" text="id" />


        <Label layoutX="18.0" layoutY="92.0" text="Nom du Restaurant" />
        <TextField fx:id="TFnom" layoutX="186.0" layoutY="88.0" promptText="Nom du restaurant" />

        <Label layoutX="52.0" layoutY="137.0" text="Adresse" />
        <TextField fx:id="TFadresse" layoutX="186.0" layoutY="133.0" promptText="Adresse" />

        <Label layoutX="60.0" layoutY="183.0" text="Type" />
        <TextField fx:id="TFtype" layoutX="186.0" layoutY="179.0" promptText="Type" />

        <Label layoutX="59.0" layoutY="244.0" text="Heure ouverture" />
        <TextField fx:id="TFouvert" layoutX="186.0" layoutY="240.0" promptText="hh:mm" />

        <Label layoutX="59.0" layoutY="302.0" text="Heure fermeture" />
        <TextField fx:id="TFferme" layoutX="186.0" layoutY="298.0" promptText="hh:mm" />

        <Label layoutX="81.0" layoutY="350.0" text="Classement" />
        <TextField fx:id="TFclass" layoutX="186.0" layoutY="355.0" promptText="Classement" />

        <Button fx:id="addresto" layoutX="206.0" layoutY="388.0" mnemonicParsing="false" onAction="#ajouter" text="Add" />
        <Button fx:id="displayresto" layoutX="345.0" layoutY="388.0" mnemonicParsing="false" onAction="#afficherresto" text="Display" />
        <Button fx:id="ajoutermenu" layoutX="206.0" layoutY="440.0" mnemonicParsing="false" onAction="#ouvrirMenu" text="Ajouter Menu" />
        <Button fx:id="modifierresto" layoutX="345.0" layoutY="440.0" mnemonicParsing="false" onAction="#ouvrirUpdate" text="Modifier Restaurant" />
    </children>
</AnchorPane>
