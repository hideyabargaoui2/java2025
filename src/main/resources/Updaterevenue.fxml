<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UpdateRevenue"
            stylesheets="@style.css"> <!-- adapte le chemin si besoin -->


    <children>


        <!-- Champ ID caché -->
        <TextField fx:id="idField" visible="false" managed="false"
                   layoutX="178.0" layoutY="22.0" promptText="ID" />

        <!-- Devise -->
        <Label layoutX="47.0" layoutY="65.0" text="Devise" styleClass="label" />
        <TextField fx:id="deviseField" layoutX="178.0" layoutY="61.0"
                   promptText="devise" styleClass="text-field" />

        <!-- Date de revenue -->
        <Label layoutX="49.0" layoutY="109.0" text="Date de revenue" styleClass="label" />
        <TextField fx:id="dateField" layoutX="178.0" layoutY="105.0"
                   promptText="yyyy-MM-dd" styleClass="text-field" />

        <!-- Mode de Réception -->
        <Label layoutX="44.0" layoutY="152.0" text="Mode de Réception" styleClass="label" />
        <TextField fx:id="modeField" layoutX="178.0" layoutY="148.0"
                   promptText="Mode" styleClass="text-field" />

        <!-- Montant -->
        <Label layoutX="42.0" layoutY="192.0" text="Montant" styleClass="label" />
        <TextField fx:id="montantField" layoutX="178.0" layoutY="188.0"
                   promptText="Montant" styleClass="text-field" />

        <!-- Bouton mise à jour -->
        <Button fx:id="updateButton" layoutX="230.0" layoutY="310.0"
                mnemonicParsing="false" onAction="#updateRevenue"
                text="Mettre à jour" styleClass="button" />

    </children>
</AnchorPane>
