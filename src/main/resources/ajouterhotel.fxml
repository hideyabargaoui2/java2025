<?xml version="1.0" encoding="UTF-8"?> <?import javafx.scene.control.*?> <?import javafx.scene.layout.*?> <?import javafx.geometry.*?> <?import javafx.scene.text.*?> <?import javafx.scene.effect.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AjouterHotelController"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color:
#d4f1ff;"
            stylesheets="@style.css">
   <VBox alignment="CENTER" spacing="30"
         AnchorPane.topAnchor="20.0"
         AnchorPane.leftAnchor="50.0"
         AnchorPane.rightAnchor="50.0"
         AnchorPane.bottomAnchor="20.0">
      <!-- Titre -->
      <Label text="Ajouter un Hôtel"
             style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill:
#0066a4;">
      </Label>
      <!-- Formulaire -->
      <VBox spacing="15" alignment="CENTER">
         <!-- Nom -->
         <HBox spacing="10" alignment="CENTER">
            <Label text="Nom:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
            <TextField fx:id="nomField" promptText="Nom de l'hôtel"
                       style="-fx-background-radius: 5;"
                       HBox.hgrow="ALWAYS" />
         </HBox>
         <!-- Prix par nuit -->
         <HBox spacing="10" alignment="CENTER">
            <Label text="Prix par nuit:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
            <TextField fx:id="prixParNuitField" promptText="Prix par nuit"
                       style="-fx-background-radius: 5;"
                       HBox.hgrow="ALWAYS" />
         </HBox>
         <!-- Nombre de nuits -->
         <HBox spacing="10" alignment="CENTER">
            <Label text="Nombre de nuits:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
            <TextField fx:id="nombreNuitsField" promptText="Nombre de nuits"
                       style="-fx-background-radius: 5;"
                       HBox.hgrow="ALWAYS" />
         </HBox>
         <!-- Standing -->
         <HBox spacing="10" alignment="CENTER">
            <Label text="Standing:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
            <TextField fx:id="standingField" promptText="Standing (ex: 5 étoiles)"
                       style="-fx-background-radius: 5;"
                       HBox.hgrow="ALWAYS" />
         </HBox>
         <!-- Adresse -->
         <HBox spacing="10" alignment="CENTER">
            <Label text="Adresse:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
            <TextField fx:id="adresseField" promptText="Adresse complète"
                       style="-fx-background-radius: 5;"
                       HBox.hgrow="ALWAYS" />
         </HBox>
         <!-- Bouton -->
         <HBox alignment="CENTER" spacing="15">
            <padding>
               <Insets top="20" right="0" bottom="0" left="0" />
            </padding>
            <Button text="Ajouter" fx:id="ajouterButton" onAction="#ajouterHotel"
                    style="-fx-background-color:
#d4d4d4; -fx-text-fill: black; -fx-background-radius: 5;"
                    prefWidth="100">
               <padding>
                  <Insets top="5" right="10" bottom="5" left="10" />
               </padding>
            </Button>
         </HBox>
      </VBox>
   </VBox>
</AnchorPane>

