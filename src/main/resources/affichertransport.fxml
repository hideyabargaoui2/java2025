<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="450.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AfficherTransportController"
            stylesheets="@style.css">

    <children>
        <VBox spacing="10.0" layoutX="20.0" layoutY="20.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <!-- Titre -->
                <Label text="Liste des Transports"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066a4;"/>

                <!-- Bouton Ajouter -->
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Button text="Ajouter Transport" fx:id="btnAjouter" onAction="#ajouterTransport"
                            style="-fx-background-color: #d4d4d4; -fx-text-fill: black; -fx-background-radius: 5;">
                        <padding>
                            <Insets top="5" right="10" bottom="5" left="10"/>
                        </padding>
                    </Button>
                </HBox>

                <!-- Table des transports -->
                <TableView fx:id="tableView" prefWidth="650.0" prefHeight="350.0">
                    <columns>
                        <TableColumn fx:id="idCol" text="ID" prefWidth="50.0"/>
                        <TableColumn fx:id="typeCol" text="Type" prefWidth="150.0"/>
                        <TableColumn fx:id="compagnieCol" text="Compagnie" prefWidth="200.0"/>
                        <TableColumn fx:id="prixCol" text="Prix" prefWidth="100.0"/>
                        <TableColumn fx:id="actionCol" text="Actions" prefWidth="150.0"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>