<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AfficherHotelController"
            stylesheets="@style.css">

    <children>
        <VBox spacing="10.0" layoutX="20.0" layoutY="20.0">
            <children>

                <!-- Bouton Ajouter -->
                <Button text="Ajouter Hôtel" fx:id="btnAjouter" onAction="#ajouterHotel"/>

                <!-- Table des hôtels -->
                <TableView fx:id="tableView" prefWidth="600.0" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="nomCol" text="Nom" prefWidth="100.0"/>
                        <TableColumn fx:id="prixNuitCol" text="Prix/Nuit" prefWidth="50.0"/>
                        <TableColumn fx:id="nombreNuitCol" text="Nombre Nuits" prefWidth="50.0"/>
                        <TableColumn fx:id="standingCol" text="Standing" prefWidth="100.0"/>
                        <TableColumn fx:id="adresseCol" text="Adresse" prefWidth="120.0"/>
                        <TableColumn fx:id="actionCol" text="Actions" prefWidth="220.0"/>
                    </columns>
                </TableView>

            </children>
        </VBox>
    </children>
</AnchorPane>
