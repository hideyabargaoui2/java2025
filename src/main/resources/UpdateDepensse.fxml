<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UpdateDepensse"
            stylesheets="@style.css"> <!-- Mets ici le chemin correct vers style.css -->

    <children>

        <!-- Champ ID caché -->
        <TextField fx:id="idField" layoutX="178.0" layoutY="22.0" promptText="ID"
                   visible="false" managed="false" />

        <!-- Catégorie -->
        <Label layoutX="47.0" layoutY="65.0" text="Catégorie" styleClass="label" />
        <TextField fx:id="categorieField" layoutX="178.0" layoutY="61.0" promptText="Catégorie"
                   styleClass="text-field" />

        <!-- Date de paiement -->
        <Label layoutX="49.0" layoutY="109.0" text="Date de Paiement" styleClass="label" />
        <TextField fx:id="dateField" layoutX="178.0" layoutY="105.0" promptText="yyyy-MM-dd"
                   styleClass="text-field" />

        <!-- Mode de paiement -->
        <Label layoutX="44.0" layoutY="152.0" text="Mode de Paiement" styleClass="label" />
        <TextField fx:id="modeField" layoutX="178.0" layoutY="148.0" promptText="Mode"
                   styleClass="text-field" />

        <!-- Montant -->
        <Label layoutX="42.0" layoutY="192.0" text="Montant" styleClass="label" />
        <TextField fx:id="montantField" layoutX="178.0" layoutY="188.0" promptText="Montant"
                   styleClass="text-field" />

        <!-- Description -->
        <Label layoutX="48.0" layoutY="240.0" text="Description" styleClass="label" />
        <TextField fx:id="descriptionField" layoutX="178.0" layoutY="236.0" promptText="Description"
                   styleClass="text-field" />

        <!-- Bouton mise à jour -->
        <Button fx:id="updateButton" layoutX="230.0" layoutY="310.0" mnemonicParsing="false"
                onAction="#updateDepensse" text="Mettre à jour" styleClass="button" />

    </children>
</AnchorPane>
