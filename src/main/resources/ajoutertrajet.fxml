<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Ajoutertrajetcontroller"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: #d4f1ff;"
            stylesheets="@style.css">

    <VBox alignment="CENTER" spacing="30"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0"
          AnchorPane.bottomAnchor="20.0">

        <!-- Titre -->
        <Label text="Ajouter un Trajet"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066a4;">
        </Label>

        <!-- Formulaire -->
        <VBox spacing="15" alignment="CENTER">
            <!-- Date -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Date:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
                <HBox style="-fx-background-color: #0066a4; -fx-background-radius: 5;">
                    <padding>
                        <Insets top="0" right="0" bottom="0" left="0" />
                    </padding>
                    <DatePicker fx:id="dateDatePicker" promptText="Date du trajet"
                                style="-fx-background-radius: 5 0 0 5;"
                                HBox.hgrow="ALWAYS">
                    </DatePicker>
                </HBox>
            </HBox>

            <!-- Heure -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Heure:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
                <TextField fx:id="HEUREField" promptText="Heure (ex: 14)"
                           style="-fx-background-radius: 5;"
                           HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Destination -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Destination:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
                <TextField fx:id="destinationField" promptText="Destination"
                           style="-fx-background-radius: 5;"
                           HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Transport -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Transport:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
                <TextField fx:id="transportField" promptText="Moyen de transport"
                           style="-fx-background-radius: 5;"
                           HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Durée -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Durée:" style="-fx-font-size: 14px; -fx-min-width: 120;" alignment="CENTER_RIGHT" />
                <TextField fx:id="dureeField" promptText="Durée (en minutes)"
                           style="-fx-background-radius: 5;"
                           HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Bouton -->
            <HBox alignment="CENTER" spacing="15">
                <padding>
                    <Insets top="20" right="0" bottom="0" left="0" />
                </padding>
                <Button text="Ajouter" fx:id="ajouterButton" onAction="#ajouterTrajet"
                        style="-fx-background-color: #d4d4d4; -fx-text-fill: black; -fx-background-radius: 5;"
                        prefWidth="100">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10" />
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>