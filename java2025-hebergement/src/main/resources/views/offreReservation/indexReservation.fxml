<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="700.0" prefWidth="1000.0"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.OffreReservation.IndexReservationController"
           stylesheets="@../style.css"

>

    <!-- Background with solid color as fallback -->
    <VBox styleClass="main-background"/>

    <!-- Background image with error handling -->
    <ImageView fitWidth="1000.0" fitHeight="700.0" preserveRatio="false">
        <image>
            <Image url="@/icons/airplane_view.png"/>
        </image>
    </ImageView>

    <!-- Main container with transparent background -->
    <BorderPane styleClass="transparent-container" fx:id="mainContainer">
        <!-- Header -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-transparent">
                <padding>
                    <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                </padding>

                <!-- Logo -->
                <StackPane fx:id="logoContainer" styleClass="logo-container">
                    <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                        <image>
                            <Image url="@/icons/travelpro_logo.png"/>
                        </image>
                    </ImageView>
                </StackPane>

                <!-- Title -->
                <VBox alignment="CENTER_LEFT" styleClass="title-container">
                    <Text text="TRAVELPRO" styleClass="app-title"/>
                    <Text text="ELEVATE YOUR BUSINESS TRIP" styleClass="app-subtitle"/>
                </VBox>

                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="15">
                    <!-- Navigation buttons with transparent backgrounds -->
                    <Button text="Home" styleClass="nav-button">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/home.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="Profil" styleClass="nav-button">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/profile.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="Paramètres" styleClass="nav-button">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/settings.png"/>

                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>
        </top>

        <!-- Main content -->
        <center>
            <VBox spacing="20.0" styleClass="content-area-transparent" fx:id="contentArea">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <!-- Section header -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="section-header-transparent">
                    <Text text="Gestion des Réservations" styleClass="section-title-light"/>
                    <Pane HBox.hgrow="ALWAYS"/>

                    <!-- Search box -->
                    <HBox alignment="CENTER" styleClass="search-box-transparent">
                        <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                            <image>
                                <Image url="@/icons/search.png"/>
                            </image>
                        </ImageView>
                        <TextField promptText="Rechercher..." styleClass="search-field-transparent" fx:id="searchField"/>
                    </HBox>

                    <!-- Action buttons -->
                    <Button text="Modifier" onAction="#handleEditReservation" styleClass="action-button">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/edit.png"/>

                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="Supprimer" onAction="#handleDeleteReservation" styleClass="delete-button">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <Image url="@/icons/delete.png"/>

                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="Offres" onAction="#gotores" styleClass="nav-button">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/offer.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>

                <!-- Table with transparent background -->
                <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS" styleClass="transparent-table">
                    <columns>
                        <TableColumn fx:id="clientColumn" text="Client" styleClass="table-column"/>
                        <TableColumn fx:id="emailColumn" text="Email" styleClass="table-column"/>
                        <TableColumn fx:id="offreColumn" text="Offre" styleClass="table-column"/>
                        <TableColumn fx:id="dateColumn" text="Date Réservation" styleClass="table-column"/>
                        <TableColumn fx:id="personnesColumn" text="Personnes" styleClass="table-column"/>
                        <TableColumn fx:id="statutColumn" text="Statut" styleClass="table-column"/>
                    </columns>
                    <placeholder>
                        <VBox alignment="CENTER" spacing="15" styleClass="empty-placeholder">
                            <ImageView fitHeight="64.0" fitWidth="64.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/empty_list.png"/>
                                </image>
                            </ImageView>
                            <Label text="Aucune réservation disponible" styleClass="empty-table-title-light"/>
                            <Label text="Créez des offres pour recevoir des réservations." styleClass="empty-table-message-light"/>
                        </VBox>
                    </placeholder>
                </TableView>

                <!-- Simple pagination -->
                <HBox alignment="CENTER" spacing="10" styleClass="pagination-container-transparent">
                    <Button styleClass="pagination-btn-transparent" text="&lt;"/>
                    <Pagination maxPageIndicatorCount="5" pageCount="10" styleClass="transparent-pagination" fx:id="pagination"/>
                    <Button styleClass="pagination-btn-transparent" text="&gt;"/>
                </HBox>
            </VBox>
        </center>

        <!-- Footer -->
        <bottom>
            <HBox alignment="CENTER" styleClass="footer-transparent">
                <padding>
                    <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                </padding>
                <Text text="© 2025 TRAVELPRO - Tous droits réservés" styleClass="footer-text-light"/>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>