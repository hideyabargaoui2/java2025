<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OffreReservation.EditOffreController" spacing="10" style="-fx-padding: 20;">
    <Label text="Modifier Offre" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="lieuField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Date de départ:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <DatePicker fx:id="dateDepartPicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Date de retour:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="dateRetourPicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Capacité:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="capaciteField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Prix total:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="prixField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button text="Enregistrer" onAction="#updateOffre" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Annuler" onAction="#cancel" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
    </HBox>
</VBox>